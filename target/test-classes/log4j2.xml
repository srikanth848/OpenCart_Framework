<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Properties>
        <Property name="log-path">./logs</Property>
        <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1}:%L - %msg%n</Property>
        <!-- %t outputs the name of the thread that generated the logging event -->
        <!-- %-5level ==> represents logging level and justified upto 5 char -->
        <!-- %c{1} ==> outputs the class name that issued the logging request -->
        <!-- %L ==> line number where the logging request made -->
        <!-- %msg ==> actual log message provided by the application -->
        <!-- %n ==> next log entry starts on a new line -->
    </Properties>
    
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log-pattern}"/>
        </Console>

        <RollingFile name="File" fileName="${log-path}/automation.log"
                     filePattern="${log-path}/automation-%d{dd-MM-yyyy}-%i.log.gz">
                     <!-- %i ==> index counter that is incremented each time the log file rolls over -->
            <PatternLayout pattern="${log-pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="1MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO"> <!-- ALL < TRACE < DEBUG < INFO < WARN < ERROR < FATAL < OFF -->
            <!--<AppenderRef ref="Console"/>-->
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
    
</Configuration>
